{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "incremental": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": ".tmp/build",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "esnext"
  },
  "exclude": ["node_modules"]
}
